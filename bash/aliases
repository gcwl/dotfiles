# cal/date
alias cal='cal -y'              # show this year
now () {
  date $@ "+[%Z] %Y-%m-%dT%H:%M:%S"
  date $@ "+[%Z] %Y-%m-%d"
  date $@ "+[%Z] %H:%M:%S"
}


