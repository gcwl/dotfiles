{
  "telemetry.enableCrashReporter": false,
  "telemetry.enableTelemetry": false,

  "editor.tabSize": 2,
  "editor.fontSize": 18,
  "editor.fontFamily": "'Ubuntu Mono', 'Droid Sans Mono', 'monospace', 'Droid Sans Fallback', 'Noto Color Emoji'",
  "editor.rulers": [100],
  "editor.dragAndDrop": false,
  "editor.links": false,
  "editor.cursorBlinking": "blink",
  "editor.minimap.showSlider": "always",
  "editor.multiCursorModifier": "ctrlCmd",
  "editor.renderControlCharacters": true,
  "editor.renderIndentGuides": true,
  "editor.renderWhitespace": "boundary",

  "breadcrumbs.enabled": true,

  "search.location": "sidebar",
  "search.smartCase": true,
  "search.collapseResults": "alwaysExpand",

  "prettier.disableLanguages": [],

  "materialTheme.accent": "Pink",

  "workbench.colorTheme": "Base16 Light Google",
  "workbench.colorCustomizations": {
    "__refurl" : "https://code.visualstudio.com/api/references/theme-color",
    "activityBar.background": "#BDC3C7",
    "activityBarBadge.background": "#FF4081",
    "breadcrumb.activeSelectionForeground": "#FF4081",
    "editor.background": "#EEEEEE",
    "editor.lineHighlightBackground": "#FF408140",
    "editorGutter.background": "#EEEEEE",
    "editorIndentGuide.background": "#DADADA",
    "editorIndentGuide.activeBackground": "#FF4081AA",
    "editorSuggestWidget.highlightForeground": "#FF4081",
    "editorSuggestWidget.selectedBackground": "#FF408140",
    "editorWhitespace.foreground": "#DADADA",
    "editorWidget.border": "#FF4081",
    "editorWidget.resizeBorder": "#FF4081",
    "list.activeSelectionBackground": "#ff408140",
    "list.activeSelectionForeground": "#FF4081",
    "list.highlightForeground": "#FF4081",
    "list.inactiveSelectionForeground": "#FF4081",
    "menubar.selectionForeground": "#FF4081",
    "menu.selectionForeground": "#FF4081",
    "notificationLink.foreground": "#FF4081",
    "panelTitle.activeBorder": "#FF4081",
    "peekView.border": "#AAAAAA",
    "pickerGroup.foreground": "#FF4081",
    "progressBar.background": "#FF4081",
    "scrollbarSlider.activeBackground": "#FF408140",
    "scrollbarSlider.background": "#FF408120",
    "scrollbarSlider.hoverBackground": "#FF408140",
    "settings.headerForeground": "#FF4081",
    "settings.modifiedItemIndicator": "#FF4081",
    "sideBarSectionHeader.background": "#BDC3C7",
    "statusBar.background": "#FF408180",
    "tab.activeBackground": "#EEEEEE",
    "tab.activeBorder": "#FF4081",
    "textLink.foreground": "#FF4081",
    "widget.shadow": "#AAAAAA"
  },
  "workbench.statusBar.feedback.visible": false,
  "workbench.sideBar.location": "left",

  "window.zoomLevel": 0,
  "window.menuBarVisibility": "toggle",

  "gitlens.advanced.messages": {
    "suppressShowKeyBindingsNotice": true
  },

  "emmet.includeLanguages": {
    "javascript": "javascriptreact",
    "vue-html": "html"
  },

  "terminal.integrated.rendererType": "dom",

  "[html]": {
    "editor.insertSpaces": true,
    "editor.tabSize": 2,
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "html.format.wrapAttributes": "force-aligned",

  "[css]": {
    "editor.insertSpaces": true,
    "editor.tabSize": 2,
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },

  "[json]": {
    "editor.insertSpaces": true,
    "editor.tabSize": 2,
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },

  "[yaml]": {
    "editor.insertSpaces": true,
    "editor.tabSize": 2,
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },

  "[javascript]": {
    "editor.insertSpaces": true,
    "editor.tabSize": 2,
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },

  "[typescriptreact]": {
    "editor.insertSpaces": true,
    "editor.tabSize": 2,
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },

  "[vue]": {
    "editor.insertSpaces": true,
    "editor.tabSize": 2,
    "editor.defaultFormatter": "octref.vetur"
  },

  "[python]": {
    "editor.insertSpaces": true,
    "editor.tabSize": 4
  },
  "python.autoComplete.addBrackets": true,
  "python.formatting.provider": "black",
  "python.formatting.blackPath": "/usr/bin/black",
  "python.formatting.blackArgs": [
    "--line-length", "100"
  ],
  "python.linting.pylintEnabled": false,
  "python.linting.flake8Enabled": true,
  "python.linting.flake8Path": "/usr/bin/flake8",
  "python.linting.flake8Args": [
    "--max-line-length=100",
    "--ignore=E265,E266,E402,E501"
  ]
}
